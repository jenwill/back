{
  "config": {
    "target": "http://localhost:3000",
    "phases": [
      {
        "duration": 5,
        "arrivalRate": 5
      },
      {
        "duration": 20,
        "arrivalRate": 1000
      }
    ]
    ,
    "processor" : "./load-test-create-user.js"
  },
  "scenarios": [
    {
      "name" : "Create Users",
      "flow": [
        {
          "function": "create"
        },
        {
          "post": {
            "url": "/api/v1/signup",
            "json": {
              "username": "{{ username }}",
              "email": " {{ email }}",
              "password": "{{ password }}"
            }
          }
        }
      ]
    }
  ]
}
